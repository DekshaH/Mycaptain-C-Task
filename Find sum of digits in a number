#include <stdio.h>
int sum (int no)
{
    if (no!= 0)
    {
        return (no% 10 + sum (no / 10));
    }
    else
    {
       return 0;
    }
}

 
int main()
{
    int n;
    printf("Enter the number: ");
    scanf("%d", &n);
    printf("Sum of digits in %d is %d\n", n,sum(n));
    return 0;
}
 
