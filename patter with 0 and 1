#include <stdio.h>
int main()
{
    int i,j,r;
    printf("Enter the number of rows: ");
    scanf("%d",&r);
    for(i=1; i<=r; i++)
    {
        printf("\n");
        for(j=0; j<2*i; j++)
        {
            if(j%2==1)
            
                printf("1");
            else
                printf("0");
            
        }
        
    }

    return 0;
}
